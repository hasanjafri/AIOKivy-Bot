#:kivy 1.10.1

<AIOTabbed>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Configuration'
        GridLayout:
            rows: 14
            cols: 2
            Label:
                text: 'Name:'
            TextInput:
                id: nameInput
                multiline: True
                hint_text: "Your Name"
            Label:
                text: 'Email:'
            TextInput:
                id: emailInput
                multiline: True
                hint_text: "Your Email"
            Label:
                text: 'Phone Number:'
            TextInput:
                id: phNumberInput
                multiline: True
                hint_text: "Your Phone Number"
            Label:
                text: 'Street Address:'
            TextInput:
                id: addressInput
                multiline: True
                hint_text: "Your Address"
            Label:
                text: 'City:'
            TextInput:
                id: cityInput
                multiline: True
                hint_text: "Your City"
            Label:
                text: 'Country:'
            TextInput:
                id: countryInput
                multiline: True
                hint_text: "Your Country"
            Label:
                text: 'State:'
            TextInput:
                id: stateInput
                multiline: True
                hint_text: "Your State"
            Label:
                text: 'Zip Code:'
            TextInput:
                id: zipCodeInput
                multiline: True
                hint_text: "Your Zip Code"
            Label:
                text: 'Card Number:'
            TextInput:
                id: cNumberInput
                multiline: True
                hint_text: "Your Card Number"
            Label:
                text: 'Card CVV:'
            TextInput:
                id: cvvInput
                multiline: False
                hint_text: "Your Card 3 Digit CVV"
            Label:
                text: 'Expiry Month:'
            TextInput:
                id: expiryMonthInput
                multiline: True
                hint_text: "Expiry month for this card"
            Label:
                text: 'Expiry Year:'
            TextInput:
                id: expiryYearInput
                multiline: True
                hint_text: "Expiry year for this card"
            Button:
                text: 'Load Config File'
                on_release: root.show_load()
            Button:
                text: 'Save Config File'
                on_release: root.show_save()
            BoxLayout:
                TextInput:
                    id: text_input
                    text: ''

                RstDocument:
                    text: text_input.text
                    show_errors: True
    TabbedPanelItem:
        text: 'Nike'
        Label:
            text: 'First tab content area'
    TabbedPanelItem:
        text: 'Adidas'
        BoxLayout:
            Label:
                text: 'Second tab content area'
            Button:
                text: 'Button that does nothing'
    TabbedPanelItem:
        text: 'Supreme'
        GridLayout:
            rows: 3
            cols: 2
            padding: 10
            spacing: 10
            Label:
                text: 'Product Type:'
            Spinner:
                id: productsType_spinner
                text: 'SELECT'
                size_hint: (1, .2)
                pos_hint: {'center_x': .5, 'center_y': .5}
                values: root.supremeProductTypes
                on_text: root.updateProductsTypeSpinner(productsType_spinner.text)
            Label:
                text: 'Product Keyword:'
            TextInput:
                id: productKeyword_ti
                multiline: False
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: (.5, .1)
                hint_text: 'Keyword in product title such as "Box" for the new Box Logo Sweatshirts'
                font_size: 11
                padding: [10, 10, 10, 10]
                text_validate_unfocus: False
            Button:
                text: 'Launch'
                on_release: root.launchSupreme()
            Label:
                id: responseLabel
            
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)